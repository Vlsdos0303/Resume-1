{{! 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
}}
<header>
  <h1>
    <div>
      {{name}}
    </div>

  </h1>
</header>
<main>
<hr />
<b>
  <div>
   <em> {{birthdate}}</em>
  </div>
  <br />
  <div>
    {{birthplace}}
  </div>
  <br />
  <div>
   <em>{{deathdate}}</em> 
  </div>
  <br />
  <div>
    {{deathplace}}
  </div>
  <br />
  <div>
    {{nationality}}
  </div>
  <br />
  <div>
    {{occupation}}
  </div>
  <br />

  <div>
    {{known_for}}
  </div>
</b>
<br>
<hr>
{{#each education}}
{{> title data="Education"big=true}}
<ul>
    <li>{{degree}}</li>
    <li>{{field}}</li>
    <li>{{institution}}</li>
    <li>{{degree}}</li>
</ul>
{{/each}}
<br>
<hr>
{{> title data= "Notable publications" big=true}}
{{#each notable_publications}}
<ul>
<li>{{title}}</li>
<em><li>{{year}}</li></em>
<li>{{publisher}}</li>
</ul>
{{/each}}
<br>
<hr>
{{> title data= "Partners" big=true}}
{{#each partners}}
<ul>
    <li>{{name}}</li>
    <li>{{relationship}}</li>
   <em> <li>{{years}}</li></em>
</ul>
{{/each}}
<br>
<hr>
{{> title data= "Awards" big=true}}
{{#each awards}}
<ul>
    <li>{{title}}</li>
<em><li>{{year}}</li></em>
<li>{{description}}</li>
</ul>
{{/each}}
<br>
<hr>
</main>
<footer>
    {{> title data= "Influences" big=true}}
    {{ influences}}
    <hr>
     {{> title data= "Influenced" big=true}}
    {{ influenced}}
    <hr>
    {{> title data= "Quotes" big=true}}
    {{quotes}}
    <hr>
    {{> title data= "Major Discoveries" big=true}}
    {{#each major_discoveries}}
    <ul>
        <li>{{title}}</li>
        <li>{{year}}</li>
        <li>{{description}}</li>
    </ul>
    {{/each}}
    <br>
    <hr>
 {{> title data= "Contribution" big=true}}
    {{#with contributions}}
    <ul>
   <li> {{title}}</li>
   <li> {{year}}</li>
   <li> {{description}}</li>
   <li> {{field}}</li>
    </ul>
    {{/with}}
</footer>


