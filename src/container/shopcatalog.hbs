<main>
  
  <nav aria-label="breadcrumb">
    <ol class="breadcrumb">
      {{#each breadcrumb}}
          {{#if url}}
            <li class="breadcrumb-item"><a href={{url}}>{{name}}</a></li>
          {{else}}
            <li class="breadcrumb-item active"><a href='#'>{{name}}</a></li>
          {{/if}}
      {{/each}}
    </ol>
  </nav>

  <h1>{{header}}</h1>
  <div class="row mt-4">
    {{#each sortBlock}}
      <div class=" col-3">
        <select class="form-select" >
          <option>{{placeholder}}</option>
            {{#each options}}
              <option value={{value}}>{{text}}</option>
            {{/each}}
        </select>
      </div>
    {{/each}}
  </div>
  

  <div class="row mt-5">
    {{#with filterBlock}}
    <div class="col-4">
      <div class="card">
        <div class=" card-body">
            {{#with sellers}}
          <div>{{title}}</div>
            {{#each list}}
              <div class="form-check mt-2">
                <input class="form-check-input" type="checkbox"  >
                <label class="form-check-label">
                  {{value}}
                </label>
              </div>
            {{/each}}
            {{/with}}

            

            <div><hr></div>

             {{#with brands}}
            <div> {{title}}</div>
            {{#with input}}
            <input class="form-control mt-2" type="text" placeholder={{placeholder}} >
            {{/with}}
            {{#each options}}
              <div class="form-check mt-2">
                <input class="form-check-input" type="checkbox"  >
                <label class="form-check-label">
                  {{value}}
                </label>
              </div>
            {{/each}}  
            {{/with}}

            <div><hr></div>

            {{#with price}}
            <div> {{title}}</div>
              <div class="row">
                {{#with range}}
                <div class="col-4">
                    <input class="form-control mt-2 mx-0" type="text" placeholder={{from}} >
                </div>
                <div class="col-4">
                    <input class="form-control mt-2 mx-0" type="text" placeholder={{to}} >
                </div>
                {{/with}}
                {{#with button}}
                <div class="col-4">
                    <a type="button" href={{link}} target="_blank" class="btn btn-outline-secondary mt-2">Ok</a>
                </div>
                {{/with}}
              </div>
                {{/with}}
            {{#each button}}


            <div><hr></div>
        
            
            {{/each}}
             
              <div class=" card-body">
              {{#with filterList}}
             {{#each this}}
            <div><hr></div> 
          <div>{{title}}</div>
            {{#each options}}
              <div class="form-check mt-2">
                <input class="form-check-input" type="checkbox"  >
                <label class="form-check-label">
                  {{value}}
                </label>
                </div>
                {{/each}}
                {{/each}}
                {{/with}}

             
           {{/with }}
           
       </div>
     </div>              
   </div>

   
          <div class="row mt-5">
             {{#each goodsList}}
                {{>catalogItem}}
             {{/each}} 
    </div>

</main>