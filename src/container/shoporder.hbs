<main>

  <h2 >{{header}}</h2>
<br>
<br>


<div class="row">
    
      <div class="col-8">
       {{#with contacts_data}}
          <h4 class=" mb-3">{{title}}</h4>
          {{#each buttons}}

              {{#if isPrimary}}
              <button type="button" class="btn btn-warning">{{text}}</button>
              {{/if}}
              {{#if isOutline}}
              <button type="button" class="btn btn-outline-warning">{{text}}</button>
              {{/if}}
          {{/each}}
      
      
    
      
              <div class="row">
                  {{#with form}}
                    {{#each input}}
                      <div class="col-5">
                              <div class='my-2 mt-4'>
                              <label class='form-label' >{{lable}}</label>
                              <input  class='form-control' placeholder={{placeholder}}>
                              <div class='form-text text-danger'>{{caption}}</div>
                            </div>
                          
                      </div>
                      
                    {{/each}}
                    <br><hr><br>
                    {{#each switch}}
                      <div class='form-check form-switch'>
                        <label class="form-check-label" >{{text}}</label>
                        <input  type="checkbox" class="form-check-input " {{#if isActive}}checked{{/if}}>
                      </div>
                    {{/each}}
                  {{/with}}
                <br><br><hr><br>


              </div>
       {{/with}}
        {{#with delivery}} 
          <h3>{{title}}</h3>
            <div class="card" >
                  <div class="row">
                  {{#each select}}
                      <div class="col-5">
                          <label class='form-label ms-4 mt-2'>{{label}}</label>
                          <select class='form-select ms-4 mb-2'>
                            <option selected>{{placeholder}}</option>
                            {{#each options}}
                              <option value={{value}}>{{text}}</option>
                            {{/each}}
                        
                          </select>
                      </div>
                    {{/each}}
                   </div>
               
            </div>
            <div class="m-2">
                <div class="row">
                  
                 {{#each delivery_type}} 
                  <div class="col-6">
                      <div class='form-check'>
                          <input name="1" type='radio' class='form-check-input' {{#if @first}}checked{{/if}}/>
                          <label class='form-check-label'>{{type}}</label>
                      </div>
                  </div>
                  <div class="col-6">
                           <label class='form-check-label text-end'>{{value}}</label>
                  </div>
                  {{/each}}


                </div>
                
            </div>
        <hr>
        <h3>Оплата</h3>
        
        {{#each payment}}
          <div class='form-check'>
              <input name="2" type='radio' class='form-check-input' {{#if @first}}checked{{/if}}/>
              <label class='form-check-label'>{{type}}</label><br>
              <div class="text-muted text-sm">{{#if description}}<small>{{description}}</small> {{/if}}</div>

          </div>
        {{/each}}
        <hr>
        <h3>{{contact.title}}</h3>
        <div class="row">
                  {{#each contact}}
                      <div class="col-5 m-2">
                          <label class='form-label' >{{lable}}</label>
                          <input  class='form-control' placeholder={{placeholder}}>
                          <div class='form-text '>{{caption}}</div>
                          </select>
                      </div>
                    {{/each}}

                    
                    <hr>
                    <br>
                    {{#with coment}}
                         <div>
                          <label class='form-label' >{{lable}}</label>
                          <input  class='form-control' placeholder={{placeholder}}>
                        </div>
          </div>
          {{/with}}
          <br>
        {{/with}}
        
            {{#with coupon}}
              {{#with select}}
                <h4 class="">Купони</h4>
                {{#with available_coupon}}
                <label class='form-label'>{{lable}}</label>
                <select class='form-select'>
                  <option selected>{{placeholder}}</option>
                        {{#each options}}
                          <option value={{value}}>{{text}}</option>
                        {{/each}}
                        {{/with}}
                            
                </select>  
                {{#with friend_coupon}}
                <label class='form-label  mt-2'>{{lable}}</label>
                <select class='form-select mb-2'>
                  <option selected>{{placeholder}}</option>
                        {{#each options}}
                          <option value={{value}}>{{text}}</option>
                        {{/each}}
                        {{/with}}
                            
                </select> 
              {{/with}}
              {{#each add}}
                  <label class='form-label' >{{lable}}</label>
                  <input  class='form-control' placeholder={{placeholder}}>
                  <div class='form-text text-muted'>{{caption}}</div>
              {{/each}}


            {{/with}}            

              
           
         <hr>   
        {{#with quiz}}
        <h4>{{title}}</h4>
        {{#with preference}}
        <div class="mt-2">{{title}}</div>
            {{#each options}}
              <div class='form-check my-2'>
                <input type='radio' class='form-check-input' {{#if @first}}checked{{/if}}/>
                <label class='form-check-label'>{{this}}</label>
              </div>
            {{/each}}
        {{/with}}
        <div> 
<br>
        {{#with your_expirience}}
        <h5>{{label}}</h5>
        
        {{/with}}
        {{#with purchase_frequency}}
                <label class='form-label  mt-2'>{{lable}}</label>
                <select class='form-select mb-2'>
                  <option selected>{{placeholder}}</option>
                        {{#each options}}
                          <option value={{value}}>{{text}}</option>
                        {{/each}}
                        {{/with}}

      </div>
<br>

{{#with factors}}
        <h5>{{title}}</h5>
        {{#each options}}
      <div class="form-check">
        <label class="form-check-label" >{{this}}</label>
        <input type="checkbox" class="form-check-input" {{#if @first}}checked{{/if}}>
      </div>
      {{/each}}
      {{/with}}
        {{/with}}








      </div>

      


    
      <div class="col-4">
         
            <div class="card m-2">
              <div class="card-body">
                {{#each action_block}}
                  
                  {{#if isPrimary}}
                    <button type="button" class="btn btn-success btn-sm mb-2">{{text}}</button>
                  {{/if}}
                  {{#if isDanger}}
                    <button type="button" class="btn btn-danger btn-sm mb-2">{{text}}</button>
                  {{/if}}
                  {{#if isInfo}}
                    <button type="button" class="btn btn-info btn-sm">{{text}}</button>
                  {{/if}}
              
              {{/each}}
              </div>
            </div> 

            <div class="card m-2">
              <div class="card-body">
                {{#with total}}
                <h4>{{title}}</h4>
                  {{#each item_list}}
                  <div>{{name}}: {{price}}</div>
                  {{/each}}
                  <hr>
                  {{#each additional_info}}
                      <div> {{text}}: {{value}}</div>
                  {{/each}}
                  <hr>
                  {{#with total_price}}
                  <div> {{text}}: {{value}}</div>
                  {{/with}}
                 <hr>
                    {{#each button}}
                      {{#if isPrimary}}
                      <button type="button" class="btn btn-primary btn-sm my-2">{{text}}</button>
                      {{/if}}
                      {{#if isOutline}}
                      <button type="button" class="btn btn-outline-primary btn-sm my-2">{{text}}</button>
                      {{/if}}
                    {{/each}}
              
              {{/with}}
              </div>
            </div>  
      </div>



    

     