{{#with formBlock}}

  <div class='row m-5'>
    <div class='col-8'>
      <h2 class='my-4'>{{header}}</h2>
      {{#with rating}}
      <p class='my-4'>{{title}}: {{value}}</p>
      {{/with}}
      <ul class='nav nav-tabs'>


         {{#with actionBlock}}
        {{#each tabs}}
          <li class='nav-item'>
            {{#if isActive}}
              <a
                class='nav-link active'
                href='#'
              >{{text}}</a>
            {{else}}
              <a class='nav-link' href='#'>{{text}}</a>
            {{/if}}

          </li>
        {{/each}}
        {{/with}}
      </ul>

      <br />
     <div><hr /></div> 
      

       {{#with actionBlock}}
      <div class='card'>
        <div class='card-body'>
          <div class='row'>
            <div class='col-7 mt-3'>
              {{#with field}}
              <p>{{placeholder}}</p>
            </div>
            <div class='col-5 text-end mt-3'>
              {{#with button}}
              <a
                type='button'
                target='_blank'
                class='btn btn-secondary btn-sm'
                href={{link}}
              >{{text}}</a>
              {{/with}}
              {{/with}}
            </div>
          </div>
        </div>
      {{/with}}

      </div>
      <br />
      <div><hr /></div>


        {{#with feedbackBlock}}

      <h2 class='mb-3'>{{title}}</h2>
      <br />
      {{#each buttons}}
        {{#if isWarning}}
          <a
            type='button'
            target='_blank'
            class='btn btn-warning btn-sm'
            href={{link}}
          >{{text}}</a>
        {{/if}}
        {{#if isSuccess}}
          <a
            type='button'
            target='_blank'
            class='btn btn-success btn-sm'
            href={{link}}
          >{{text}}</a>
        {{/if}}
        {{#if isDanger}}
          <a
            type='button'
            target='_blank'
            class='btn btn-danger btn-sm'
            href={{link}}
          >{{text}}</a>
        {{/if}}

      {{/each}}

      {{/with}}
    </div>


    {{#with goodsInfo}}
    <div class='col-4'>
      <div class='card my-2'>
        <div class='card-body'>
          <img
            src={{photo}}
          />
          <h5 class='mt-3'>{{name}}</h5>
        </div>
      </div>
      <div class='card my-2'>
        <div class='catd-body'>
          <h5 class='ms-3 mt-3'>{{price}}</h5>
          <p class='ms-3'>Є в наявності</p>
          {{#each buttons}}
            {{#if isPrimary}}
              <a
                type='button'
                target='_blank'
                class='btn btn-primary btn-sm ms-3'
                href={{link}}
              >{{text}}</a>
            {{/if}}
            {{#if isSecondary}}
              <a
                type='button'
                target='_blank'
                class='btn btn-secondary btn-sm ms-3 my-2'
                href={{link}}
              >{{text}}</a>
            {{/if}}
          {{/each}}
        </div>
      </div>
      <div class='card'>
        <div class='card-body py-3 ps-3 pe-1'>
         {{#with seller}}
          <div>{{title}}:
            <b>{{value}}</b></div>
           {{/with}}
        </div>

      </div>
    </div>
  </div>

 {{/with}}
{{/with}}

<div class="m-5">
{{#each reviewList}}
    {{>reviewItem}}
  {{/each}}

  </div>