

<div class='card mb-4'>
  <div class='card-body'>
    <div class='card p-0' style=''>
      <ul class='list-group list-group-flush'>
        <li class='list-group-item'>
          <div class='row'>
            <div class='col-8'>
              {{#with title}}
              <h6 class='m-0'>{{userName}}</h6>
              <div>{{caption}}</div>
            </div>
            <div class='col-4 text-end my-2'>
              {{date}}
              {{/with}}
            </div>
          </div>
        </li>
        {{#with reviewBody}}
        <li class='list-group-item'>
        {{#with seller}}
          <div>{{title}}:
            {{value}}</div>
         {{/with}}
        {{#with rating}}
          <div class='mt-3'>{{title}}:
            {{value}}</div>

        {{/with}}
          <div class='mt-3'>{{text}}</div>
          <div class='mt-3'><b

        {{#with advantages}}
            >{{title}}:</b></div>
          <div
            class='mt-0'
          >{{text}}</div>
         {{/with}}

          {{#with disadvantages}}
          <div class='mt-3'><b
            >{{title}}:</b></div>
          <div
            class='mt-0'
          >{{text}}</div>
        {{/with}}
          {{#each images}}
            <img
              width='80'
              height='80'
              class='mt-3'
              src={{this}}
            />
          {{/each}}
        </li>
      </ul>
    </div>

    {{#each coments}}
      <div class='row'>
        <div class='col-1'></div>
        <div class='col-11'>
          <div class='card mt-3'>
            <div class='card-body'>
              <div class='row'>
                <div class='col-8'>
                  <h5>{{userName}}</h5>

                </div>
                <div class='col-4 text-end'>
                  <div>{{date}}</div>
                </div>
              </div>
              <div>{{text}}</div>

            </div>
          </div>
        </div>
      </div>
    {{/each}}
{{/with}}
  </div>
</div>