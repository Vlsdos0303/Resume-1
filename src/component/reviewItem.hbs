<div class='card mb-4'>
  <div class='card-body'>
    <div class='card p-0' style=''>
      <ul class='list-group list-group-flush'>
        <li class='list-group-item'>
          <div class='row'>
            <div class='col-8'>
              <h6 class='m-0'>{{title.userName}}</h6>
              <div>{{title.caption}}</div>
            </div>
            <div class='col-4 text-end my-2'>
              {{title.date}}
            </div>
          </div>
        </li>
        <li class='list-group-item'>
          <div>{{reviewBody.seller.title}}:
            {{reviewBody.seller.value}}</div>
          <div class='mt-3'>{{reviewBody.rating.title}}:
            {{reviewBody.rating.value}}</div>
          <div class='mt-3'>{{reviewBody.text}}</div>
          <div class='mt-3'><b
            >{{reviewBody.advantages.title}}:</b></div>
          <div
            class='mt-0'
          >{{reviewBody.advantages.text}}</div>
          <div class='mt-3'><b
            >{{reviewBody.disadvantages.title}}:</b></div>
          <div
            class='mt-0'
          >{{reviewBody.disadvantages.text}}</div>
          {{#each reviewBody.images}}
            <img
              width='80'
              height='80'
              class='mt-3'
              src={{this}}
            />
          {{/each}}
        </li>
      </ul>
    </div>

    {{#each reviewBody.coments}}
      <div class='row'>
        <div class='col-1'></div>
        <div class='col-11'>
          <div class='card mt-3'>
            <div class='card-body'>
              <div class='row'>
                <div class='col-8'>
                  <h5>{{userName}}</h5>

                </div>
                <div class='col-4 text-end'>
                  <div>{{date}}</div>
                </div>
              </div>
              <div>{{text}}</div>

            </div>
          </div>
        </div>
      </div>
    {{/each}}

  </div>
</div>