<div class="text-center mx-5 mt-3">
  {{#with goodsOtherBlock}}
    <h2>{{title}}</h2>

  
</div>
<div class='row mx-5 mt-3'>
  {{#each cards}}
    <div class='col-4 g-2'>

      <div class='card text-bg-dark '>

        <div class='card-body'></div>

        <img
          class='card-header card-img-top p-0'
          src='{{image}}'
          alt='{{title}}'
        />
        <div class='card-body'></div>
        <div class='card-title text-header'>{{title}}
          <span
            class='badge text-bg-danger rounded-pill text-uppercase'
          >Топ</span>
          <span
            class='badge text-bg-success rounded-pill text-uppercase'
          >Нове</span>
          <p class='card=text'>{{description}}</p>
        </div>
      </div>

    </div>
  {{/each}}
</div>


{{/with}}









